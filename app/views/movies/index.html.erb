<h1>Discover Movies</h1>

<%= button_to "Top 40 Movies", "/movies", method: :get, params: {top_40: true} %>

<%= form_with url: movies_path, params: {search: true}, method: :get, local: true do |f| %>
  <%= f.text_field :search %>
  <%= f.submit 'Search' %>
<% end %>

<ul><% @movies.map do |movie|  %>
  <li><%= link_to "#{movie[:title]}", "/movies/#{movie[:id]}" %><br>
      Rating: <%= movie[:vote_average] %>
  <% end  %><br>


<br>
</ul>
<%= link_to "Back to Discover Movies", "/discover" %>
